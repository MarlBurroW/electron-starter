@tailwind base;
@tailwind components;
@tailwind utilities;


/* Variables CSS d√©finies dynamiquement par les presets tweakcn */

@layer base {
  * {
    @apply border-border;
  }
  body {
    @apply bg-background text-foreground;
    letter-spacing: var(--tracking-normal);
  }
}

/* Electron window controls */
.drag-region {
  -webkit-app-region: drag;
}

.no-drag {
  -webkit-app-region: no-drag;
}